---
import ThemeProvider from '../components/ThemeProvider.astro';
import { ClientRouter } from 'astro:transitions';
import Analytics from '@vercel/analytics/astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Abingdon Antiques - Your Premier Source for Fine Antiques" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
		<!-- Apply saved theme before first paint so no dark flash; default = light -->
		<script is:inline>
			try {
				var s = localStorage.getItem('theme');
				if (s === 'dark') document.documentElement.classList.add('dark');
				else document.documentElement.classList.remove('dark');
			} catch (_) {
				document.documentElement.classList.remove('dark');
			}
		</script>
		<ClientRouter />
		<Analytics />
	</head>
	<body class="antiques-body">
		<ThemeProvider>
			<slot />
		</ThemeProvider>
	</body>
</html>

<style is:global>
/* Abingdon Antiques â€“ match hugo-antiques theme */
*,
*::before,
*::after {
  box-sizing: border-box;
}
/* Prevent any horizontal scroll at any viewport size */
html {
  overflow-x: hidden; /* fallback for older browsers */
  overflow-x: clip;
  overflow-y: auto;
}
body.antiques-body {
  overflow-x: hidden;
  overflow-x: clip;
}
body.antiques-body > * {
  min-width: 0;
  max-width: 100%;
  overflow-x: clip;
}
:root {
  --font-sans: 'Montserrat', system-ui, sans-serif;
  --font-serif: 'Playfair Display', Georgia, serif;
  --primary: #8b4513;
  --primary-light: #a0522d;
  --secondary: #d2b48c;
  --accent: #deb887;
  --cream: #faf8f5;
  --cream-dark: #f0ebe3;
  --ink: #2c2420;
  --ink-muted: #5c524c;
  --card-bg: #ffffff;
  --card-border: #e8e0d5;
  --shadow: 0 4px 20px rgba(44, 36, 32, 0.08);
  --shadow-hover: 0 8px 30px rgba(44, 36, 32, 0.12);
  --radius: 12px;
  --radius-lg: 16px;
  --transition: 0.2s ease;
}
html.dark {
  --primary: #c4956a;
  --primary-light: #d4a574;
  --secondary: #b8986e;
  --accent: #e8c9a0;
  --cream: #1a1714;
  --cream-dark: #141210;
  --ink: #f5f0e8;
  --ink-muted: #c4bcb0;
  --card-bg: #252119;
  --card-border: #3d352c;
  --shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  --shadow-hover: 0 8px 30px rgba(0, 0, 0, 0.4);
}
html {
  font-family: var(--font-sans);
  background: var(--cream);
  color: var(--ink);
  transition: background-color var(--transition), color var(--transition);
  scroll-behavior: smooth;
}
html::before {
  content: '';
  position: fixed;
  inset: 0;
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.03'/%3E%3C/svg%3E");
  pointer-events: none;
  z-index: 0;
}
html.dark::before {
  opacity: 0.02;
}
body.antiques-body {
  margin: 0;
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 1;
}
.skip-link {
  position: absolute;
  top: -100px;
  left: 1rem;
  z-index: 100;
  padding: 0.75rem 1rem;
  background: var(--primary);
  color: var(--cream);
  border-radius: var(--radius);
  text-decoration: none;
  font-weight: 600;
  transition: top 0.2s ease;
}
.skip-link:focus {
  top: 1rem;
  outline: 2px solid var(--accent);
  outline-offset: 2px;
}
.site-header {
  width: 100%;
  max-width: 100%;
  background: var(--card-bg);
  box-shadow: var(--shadow);
  border-bottom: 1px solid var(--card-border);
  transition: background-color var(--transition), box-shadow var(--transition);
}
.theme-toggle-wrap {
  position: fixed;
  top: 1rem;
  right: 1rem;
  z-index: 50;
}
.theme-toggle {
  cursor: pointer;
  padding: 0.6rem;
  color: var(--ink-muted);
  background: transparent;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: color var(--transition), transform var(--transition);
}
.theme-toggle:hover {
  color: var(--ink);
  transform: scale(1.05);
}
.theme-icon {
  width: 1.25rem;
  height: 1.25rem;
  display: block;
}
.theme-icon-hidden {
  display: none !important;
}
.header-inner {
  max-width: 72rem;
  width: 100%;
  min-width: 0;
  margin: 0 auto;
  padding: 1rem 1rem;
  box-sizing: border-box;
}
.logo-wrap {
  display: flex;
  justify-content: center;
  margin-bottom: 0.25rem;
}
.logo-wrap .logo-img {
  max-width: 200px;
  height: auto;
  object-fit: contain;
  border-radius: var(--radius);
  border: 1px solid var(--card-border);
  box-shadow: var(--shadow);
}
@media (min-width: 768px) {
  .logo-wrap .logo-img {
    max-width: 300px;
  }
}
.main-content {
  flex: 1;
  min-width: 0;
  width: 100%;
  max-width: 100%;
  padding: 0 1rem 3rem;
}
.container {
  max-width: 56rem;
  width: 100%;
  min-width: 0;
  margin: 0 auto;
  padding: 0 1rem;
}
.section-title {
  font-family: var(--font-serif);
  font-size: 1.75rem;
  font-weight: 700;
  text-align: center;
  color: var(--ink);
  margin: 0 0 1.5rem;
}
.hero {
  padding: 2rem 0;
  position: relative;
}
.hero::after {
  content: '';
  display: block;
  width: 4rem;
  height: 3px;
  background: linear-gradient(90deg, var(--primary), var(--accent));
  margin: 1.5rem auto 0;
  border-radius: 2px;
}
.hero-text {
  font-size: 1.125rem;
  color: var(--ink-muted);
  text-align: center;
  margin: 0 0 1.5rem;
  line-height: 1.6;
  letter-spacing: 0.01em;
}
.hero-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  justify-content: center;
  align-items: center;
}
.btn {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  border-radius: var(--radius);
  font-weight: 600;
  text-decoration: none;
  transition: background var(--transition), transform var(--transition), box-shadow var(--transition);
  border: none;
  cursor: pointer;
}
.btn-icon {
  width: 1.25rem;
  height: 1.25rem;
  flex-shrink: 0;
}
.btn-map {
  background: var(--primary);
  color: var(--cream);
}
.btn-map:hover {
  background: var(--primary-light);
  transform: translateY(-1px);
  box-shadow: var(--shadow-hover);
}
.btn-phone {
  background: #2d5016;
  color: #fff;
}
.btn-phone:hover {
  background: #3a6b1d;
  transform: translateY(-1px);
  box-shadow: var(--shadow-hover);
}
html.dark .btn-phone {
  background: #3d6b24;
}
html.dark .btn-phone:hover {
  background: #4a7d2e;
}
.carousel-section {
  padding: 2rem 0;
  overflow: hidden;
}
.carousel-wrapper {
  position: relative;
  min-width: 0;
  overflow: hidden;
}
.carousel {
  overflow: hidden;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-hover);
  background: var(--cream-dark);
  width: 100%;
  max-width: 100%;
}
.carousel-track {
  display: flex;
  transition: transform 0.3s ease-in-out;
  min-width: 0;
}
.carousel-slide {
  min-width: 100%;
  width: 100%;
  flex-shrink: 0;
}
.carousel-img {
  width: 100%;
  max-width: 100%;
  height: 16rem;
  object-fit: cover;
  cursor: pointer;
  transition: opacity var(--transition);
  display: block;
  backface-visibility: hidden;
}
.carousel-img:hover {
  opacity: 0.92;
}
@media (min-width: 768px) {
  .carousel-img {
    height: 24rem;
  }
}
.carousel-nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 2.5rem;
  height: 2.5rem;
  border-radius: 50%;
  border: none;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background var(--transition);
}
.carousel-nav:hover {
  background: rgba(0, 0, 0, 0.7);
}
.carousel-prev {
  left: 0.5rem;
}
.carousel-next {
  right: 0.5rem;
}
.carousel-nav-icon {
  width: 1.5rem;
  height: 1.5rem;
}
.carousel-indicators {
  display: flex;
  justify-content: center;
  gap: 0.5rem;
  margin-top: 1rem;
}
.carousel-dot {
  width: 1.5rem;
  height: 1.5rem;
  border-radius: 50%;
  border: none;
  background: var(--card-border);
  cursor: pointer;
  padding: 0;
  transition: background var(--transition), transform var(--transition);
}
.carousel-dot:hover {
  background: var(--ink-muted);
  transform: scale(1.1);
}
.carousel-dot[aria-selected="true"] {
  background: var(--primary);
}
.lightbox {
  position: fixed;
  inset: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.9);
}
.lightbox.hidden {
  display: none !important;
}
.lightbox-inner {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.lightbox-img {
  max-width: 100%;
  max-height: 90vh;
  object-fit: contain;
}
.lightbox-btn {
  position: absolute;
  background: transparent;
  border: none;
  color: #fff;
  font-size: 2rem;
  padding: 0.5rem;
  cursor: pointer;
  z-index: 2;
  transition: background var(--transition);
  border-radius: 50%;
}
.lightbox-btn:hover {
  background: rgba(255, 255, 255, 0.2);
}
.lightbox-close {
  top: 1rem;
  right: 1rem;
  font-size: 2.5rem;
  line-height: 1;
}
.lightbox-prev {
  left: 1rem;
  top: 50%;
  transform: translateY(-50%);
}
.lightbox-next {
  right: 1rem;
  top: 50%;
  transform: translateY(-50%);
}
.lightbox-counter {
  position: absolute;
  bottom: 1rem;
  left: 50%;
  transform: translateX(-50%);
  color: #fff;
  font-size: 1rem;
  background: rgba(0, 0, 0, 0.5);
  padding: 0.25rem 0.75rem;
  border-radius: 9999px;
}
.info-section {
  padding: 2rem 0;
}
.info-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 2rem;
}
@media (min-width: 768px) {
  .info-grid {
    grid-template-columns: 1fr 1fr;
    gap: 2.5rem;
  }
}
.info-card {
  background: var(--card-bg);
  border: 1px solid var(--card-border);
  border-radius: var(--radius-lg);
  padding: 1.5rem;
  box-shadow: var(--shadow);
  transition: box-shadow var(--transition);
}
.info-card:hover {
  box-shadow: var(--shadow-hover);
}
.info-card-title {
  font-family: var(--font-serif);
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--ink);
  margin: 0 0 1rem;
}
.info-card-body {
  color: var(--ink-muted);
  font-size: 0.9375rem;
  line-height: 1.6;
}
.info-card-body p + p {
  margin-top: 1rem;
}
.info-card-body a {
  color: var(--primary);
  text-decoration: none;
  transition: color var(--transition);
  word-break: break-word;
  overflow-wrap: break-word;
}
.info-card-body a:hover {
  color: var(--primary-light);
  text-decoration: underline;
}
.hours-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 0.75rem;
}
.hours-days {
  font-weight: 500;
  color: var(--ink);
}
.hours-time {
  color: var(--ink-muted);
}
.hours-note {
  margin-top: 1rem;
  padding: 0.75rem;
  background: rgba(210, 180, 140, 0.15);
  border-radius: var(--radius);
}
.hours-note p {
  margin: 0;
  font-size: 0.875rem;
  color: var(--ink-muted);
}
html.dark .hours-note {
  background: rgba(196, 149, 106, 0.12);
}
.about-section {
  padding: 2rem 0;
}
.about-inner {
  text-align: center;
}
.about-text {
  color: var(--ink-muted);
  line-height: 1.7;
  margin: 0 0 1rem;
  max-width: min(42rem, 100%);
  margin-left: auto;
  margin-right: auto;
}
.about-text + .about-text {
  margin-bottom: 1.5rem;
}
.vendor-cta {
  display: inline-block;
  max-width: 100%;
  background: var(--card-bg);
  border: 1px solid var(--card-border);
  border-radius: var(--radius-lg);
  padding: 1rem 1.5rem;
  box-shadow: var(--shadow);
}
.vendor-cta p {
  margin: 0;
  color: var(--ink);
  font-size: 0.9375rem;
  word-wrap: break-word;
  overflow-wrap: break-word;
}
.vendor-cta a {
  color: var(--primary);
  text-decoration: none;
}
.vendor-cta a:hover {
  text-decoration: underline;
}
.map-section {
  padding: 2rem 0;
}
.map-wrap {
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow);
  background: var(--cream-dark);
  max-width: 100%;
}
.map-iframe {
  display: block;
  width: 100%;
  max-width: 100%;
}
.site-footer {
  border-top: 1px solid var(--card-border);
  background: var(--cream-dark);
  color: var(--ink-muted);
  padding: 2rem 1rem;
  margin-top: auto;
  transition: background var(--transition), color var(--transition);
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
}
.footer-inner {
  max-width: 72rem;
  width: 100%;
  min-width: 0;
  margin: 0 auto;
  padding: 0 1rem;
  text-align: center;
  box-sizing: border-box;
}
.footer-heading {
  font-family: var(--font-serif);
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--ink);
  margin: 0 0 1rem;
}
.footer-tagline {
  margin: 0 0 1.5rem;
  font-size: 1rem;
  max-width: min(28rem, 100%);
  margin-left: auto;
  margin-right: auto;
}
.social-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 0.75rem;
  max-width: min(28rem, 100%);
  width: 100%;
  margin: 0 auto 2rem;
  box-sizing: border-box;
}
@media (min-width: 640px) {
  .social-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }
}
.social-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
  padding: 1rem;
  background: var(--card-bg);
  border: 1px solid var(--card-border);
  border-radius: var(--radius);
  text-decoration: none;
  color: var(--ink);
  font-weight: 500;
  transition: transform var(--transition), box-shadow var(--transition);
}
.social-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-hover);
}
.social-icon {
  width: 2rem;
  height: 2rem;
  transition: transform var(--transition);
}
.social-card:hover .social-icon {
  transform: scale(1.1);
}
.social-icon-fb { color: #1877f2; }
.social-icon-ig { color: #e4405f; }
.social-icon-yt { color: #ff0000; }
.social-icon-tt { color: var(--ink); }
html.dark .social-icon-tt { color: #fff; }
.social-label {
  font-size: 0.875rem;
}
.footer-copy {
  padding-top: 1.5rem;
  border-top: 1px solid var(--card-border);
}
.footer-copy p {
  margin: 0;
  font-size: 0.875rem;
}
</style>