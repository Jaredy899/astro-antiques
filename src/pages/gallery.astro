---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';

const items = [
  {
    id: 1,
    title: 'Victorian Mahogany Sideboard',
    description: 'Circa 1880, beautifully restored with original hardware',
    image: 'https://xfcpn2nyfb.ufs.sh/f/LKapUqCN3UFsZkQKnRtPE1NxDIg9rh86Bi4RfTSylb3eKdGm',
    category: 'Furniture',
    price: '$2,500'
  },
  {
    id: 2,
    title: 'Art Deco Table Lamp',
    description: '1930s, original glass shade with brass base',
    image: 'https://xfcpn2nyfb.ufs.sh/f/LKapUqCN3UFsy80sfRDG1JbILFWOoMAgx7P49VvUj5rZXtNe',
    category: 'Lighting',
    price: '$450'
  },
  {
    id: 3,
    title: 'Georgian Silver Tea Set',
    description: 'Circa 1790, complete set with original wooden case',
    image: 'https://xfcpn2nyfb.ufs.sh/f/LKapUqCN3UFsApRfExb1pPWKB2MoR9DLV5lmCjvsJGYxX3nw',
    category: 'Silver',
    price: '$3,200'
  },
  {
    id: 4,
    title: 'Victorian Oil Painting',
    description: 'Landscape scene, signed by artist, circa 1860',
    image: 'https://xfcpn2nyfb.ufs.sh/f/LKapUqCN3UFsqeVP8aAo2pXgV7HBurPdSzmyUO5CK9f0lx1s',
    category: 'Art',
    price: '$1,800'
  },
  {
    id: 5,
    title: 'Brass Bed Frame',
    description: 'Victorian era, full size, excellent condition',
    image: 'https://xfcpn2nyfb.ufs.sh/f/LKapUqCN3UFse4NPZbYKjfQh6uHwcvo0mnFrP8DByULaObG4',
    category: 'Furniture',
    price: '$1,200'
  },
  {
    id: 6,
    title: 'Vintage Clock Collection',
    description: 'Set of 3 mantel clocks, various styles',
    image: 'https://xfcpn2nyfb.ufs.sh/f/LKapUqCN3UFssWQENxRiwGqRQXjaOTYzH816lIkchyoC9txN',
    category: 'Clocks',
    price: '$950'
  }
];

const categories = [...new Set(items.map(item => item.category))];
---

<Layout title="Gallery - Abingdon Antiques">
  <Header />
  
  <main class="py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-serif font-bold text-center mb-12">Our Collection</h1>
      
      <!-- Category Filter -->
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        <button class="px-6 py-2 rounded-full bg-primary text-white hover:bg-primary/90 transition-colors">
          All Items
        </button>
        {categories.map(category => (
          <button class="px-6 py-2 rounded-full bg-gray-100 text-gray-800 hover:bg-gray-200 transition-colors">
            {category}
          </button>
        ))}
      </div>

      <!-- Gallery Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {items.map(item => (
          <div class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow">
            <img src={item.image} alt={item.title} class="w-full h-64 object-cover" />
            <div class="p-6">
              <div class="flex justify-between items-start mb-2">
                <h3 class="text-xl font-serif font-bold">{item.title}</h3>
                <span class="text-primary font-bold">{item.price}</span>
              </div>
              <p class="text-gray-600 mb-4">{item.description}</p>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-500">{item.category}</span>
                <button class="text-primary hover:text-primary/80 font-medium">
                  View Details â†’
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Contact CTA -->
      <div class="mt-16 text-center">
        <h2 class="text-2xl font-serif font-bold mb-4">Interested in an Item?</h2>
        <p class="text-gray-600 mb-8">
          Contact us for more information about any piece in our collection.
        </p>
        <a href="/contact" class="inline-block bg-primary hover:bg-primary/90 text-white px-8 py-3 rounded-md transition-colors duration-200">
          Contact Us
        </a>
      </div>
    </div>
  </main>

  <footer class="bg-gray-900 text-white py-12">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div>
          <h3 class="text-xl font-serif font-bold mb-4">Abingdon Antiques</h3>
          <p class="text-gray-400">Your premier source for fine antiques and collectibles</p>
        </div>
        <div>
          <h3 class="text-xl font-serif font-bold mb-4">Contact</h3>
          <p class="text-gray-400">123 Main Street<br />Abingdon, VA 24210<br />(276) 555-0123</p>
        </div>
        <div>
          <h3 class="text-xl font-serif font-bold mb-4">Hours</h3>
          <p class="text-gray-400">Tuesday - Saturday: 10am - 5pm<br />Sunday - Monday: Closed</p>
        </div>
      </div>
      <div class="mt-8 pt-8 border-t border-gray-800 text-center text-gray-400">
        <p>&copy; {new Date().getFullYear()} Abingdon Antiques. All rights reserved.</p>
      </div>
    </div>
  </footer>
</Layout> 