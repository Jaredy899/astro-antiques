---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout title="Contact Us - Abingdon Antiques">
  <Header />
  
  <main class="py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-serif font-bold text-center mb-12">Contact Us</h1>
      
      <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <!-- Contact Information -->
        <div>
          <div class="bg-white p-8 rounded-lg shadow-md mb-8">
            <h2 class="text-2xl font-serif font-bold mb-6">Visit Our Shop</h2>
            <div class="space-y-4">
              <div>
                <h3 class="font-bold text-gray-800 mb-1">Address</h3>
                <p class="text-gray-600">123 Main Street<br />Abingdon, VA 24210</p>
              </div>
              <div>
                <h3 class="font-bold text-gray-800 mb-1">Phone</h3>
                <p class="text-gray-600">(276) 555-0123</p>
              </div>
              <div>
                <h3 class="font-bold text-gray-800 mb-1">Email</h3>
                <p class="text-gray-600">info@abingdonantiques.com</p>
              </div>
              <div>
                <h3 class="font-bold text-gray-800 mb-1">Hours</h3>
                <p class="text-gray-600">
                  Tuesday - Saturday: 10am - 5pm<br />
                  Sunday - Monday: Closed
                </p>
              </div>
            </div>
          </div>

          <div class="bg-gray-100 p-8 rounded-lg">
            <h2 class="text-2xl font-serif font-bold mb-6">Follow Us</h2>
            <div class="flex space-x-4">
              <a href="#" class="text-gray-600 hover:text-primary transition-colors">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a href="#" class="text-gray-600 hover:text-primary transition-colors">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.012-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-white p-8 rounded-lg shadow-md">
          <h2 class="text-2xl font-serif font-bold mb-6">Send Us a Message</h2>
          <form class="space-y-6">
            <div>
              <label for="name" class="block text-gray-700 font-medium mb-2">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:border-transparent"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-gray-700 font-medium mb-2">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:border-transparent"
                required
              />
            </div>
            <div>
              <label for="subject" class="block text-gray-700 font-medium mb-2">Subject</label>
              <input
                type="text"
                id="subject"
                name="subject"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:border-transparent"
                required
              />
            </div>
            <div>
              <label for="message" class="block text-gray-700 font-medium mb-2">Message</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:border-transparent"
                required
              ></textarea>
            </div>
            <button
              type="submit"
              class="w-full bg-primary hover:bg-primary/90 text-white font-medium py-3 px-6 rounded-md transition-colors duration-200"
            >
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </main>

  <footer class="bg-gray-900 text-white py-12">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div>
          <h3 class="text-xl font-serif font-bold mb-4">Abingdon Antiques</h3>
          <p class="text-gray-400">Your premier source for fine antiques and collectibles</p>
        </div>
        <div>
          <h3 class="text-xl font-serif font-bold mb-4">Contact</h3>
          <p class="text-gray-400">123 Main Street<br />Abingdon, VA 24210<br />(276) 555-0123</p>
        </div>
        <div>
          <h3 class="text-xl font-serif font-bold mb-4">Hours</h3>
          <p class="text-gray-400">Tuesday - Saturday: 10am - 5pm<br />Sunday - Monday: Closed</p>
        </div>
      </div>
      <div class="mt-8 pt-8 border-t border-gray-800 text-center text-gray-400">
        <p>&copy; {new Date().getFullYear()} Abingdon Antiques. All rights reserved.</p>
      </div>
    </div>
  </footer>
</Layout> 