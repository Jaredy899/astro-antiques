import { Image } from 'astro:assets';

interface Props {
  src: string;
  alt: string;
  class?: string;
  width?: number;
  height?: number;
  fill?: boolean;
  priority?: boolean;
}

const { 
  src, 
  alt, 
  class: className = "object-cover",
  width,
  height,
  fill,
  priority
} = Astro.props;

{fill ? (
  <img
    src={src}
    alt={alt}
    class={className}
    loading={priority ? "eager" : "lazy"}
  />
}
  <img
    src={src}
    alt={alt}
    width={width}
    height={height}
    class={className}
    loading={priority ? "eager" : "lazy"}
  />
)} 
