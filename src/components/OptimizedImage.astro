---
import { Image } from 'astro:assets';

interface Props {
  src: string;
  alt: string;
  fill?: boolean;
  class?: string;
}

const { src, alt, fill, class: className } = Astro.props;
---

<img
  src={src}
  alt={alt}
  class={className}
  loading="lazy"
  decoding="async"
  {...(fill && { style: "position: absolute; height: 100%; width: 100%; inset: 0px;" })}
/> 
