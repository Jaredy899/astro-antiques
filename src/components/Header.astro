---
import { Image } from 'astro:assets';
import ThemeToggle from "./ThemeToggle.astro";
---

<header class="w-full bg-white dark:bg-gray-900 shadow-logo dark:shadow-gray-800 transition-colors duration-200" role="banner">
  {/* Theme Toggle - Fixed Position */}
  <div class="fixed right-4 top-4 z-50">
    <ThemeToggle />
  </div>

  <div class="mx-auto max-w-6xl px-4 py-3 md:py-4">
    {/* Logo */}
    <div class="flex justify-center mb-3 md:mb-4">
      <div class="w-[200px] md:w-[300px]">
        <div class="bg-white dark:bg-gray-900 rounded-lg shadow-logo dark:shadow-gray-800 border border-logo-100 dark:border-gray-700">
          <Image
            src="/images/logo.webp"
            alt="Abingdon Antiques and More"
            width={360}
            height={105}
            class="w-full h-auto object-contain"
            loading="eager"
            decoding="async"
          />
        </div>
      </div>
    </div>
  </div>
</header> 